{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es5", "es6", "es7", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "./app",
    "noImplicitAny": false
  },
  "include": ["app"],
  // "exclude": ["node_modules"],
  "compileOnSave": false // we disable TypeScript's compileOnSave as that will be handled by webpack.
}
